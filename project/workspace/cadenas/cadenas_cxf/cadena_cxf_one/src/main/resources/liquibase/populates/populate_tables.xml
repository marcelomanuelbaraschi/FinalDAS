<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
	
	<!-- ******************************** -->
	<!--   TABLE POPULATION CHANGE-SETS   -->
	<!-- ******************************** -->

	<changeSet id="Populate table sucursal" author="DAS-Team" runAlways="true" runOnChange="true">
		<preConditions onFail="MARK_RAN">
			<tableExists tableName="sucursal"/>
			<sqlCheck expectedResult="0">
				SELECT COUNT(*)
				FROM sucursal
			</sqlCheck>
		</preConditions>
		<sqlFile path="/src/main/resources/liquibase/populates/sucursal.sql"/>
	</changeSet>

	<changeSet id="Populate table productoSucursal" author="DAS-Team" runAlways="true" runOnChange="true">
		<preConditions onFail="MARK_RAN">
			<tableExists tableName="productoSucursal"/>
			<sqlCheck expectedResult="0">
				SELECT COUNT(*)
				FROM productoSucursal
			</sqlCheck>
		</preConditions>
		<sqlFile path="/src/main/resources/liquibase/populates/productoSucursal.sql"/>
	</changeSet>

	<changeSet id="Populate table precio" author="DAS-Team" runAlways="true" runOnChange="true">
		<preConditions onFail="MARK_RAN">
			<tableExists tableName="precio"/>
			<sqlCheck expectedResult="0">
				SELECT COUNT(*)
				FROM precio
			</sqlCheck>
		</preConditions>
		<sqlFile path="/src/main/resources/liquibase/populates/precio.sql"/>
	</changeSet>

</databaseChangeLog>
