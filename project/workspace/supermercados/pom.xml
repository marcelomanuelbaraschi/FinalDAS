<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>supermercados</groupId>
    <artifactId>supermercados</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>Supermercados</name>
    <packaging>pom</packaging>


    <modules>
        <module>supermercados_core</module>
        <module>supermercados_rest</module>
        <module>supermercados_cxf</module>
        <module>supermercados_axis</module>
        <module>supermercados_db</module>
    </modules>

    <prerequisites>
        <maven>3.3.9</maven>
    </prerequisites>

    <!-- Dependency properties -->
    <properties>
        <!-- specify which version of Java to build against-->
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven-compiler-plugin.version>3.7.0</maven-compiler-plugin.version>

        <liquibase.version>3.6.1</liquibase.version>
        <maven-war-plugin.version>2.6</maven-war-plugin.version>
        <tomcat7-maven-plugin.version>2.2</tomcat7-maven-plugin.version>

        <slf4j.api.version>1.7.25</slf4j.api.version>
        <log4j.slf4j.impl.version>2.11.0</log4j.slf4j.impl.version>
    </properties>

    <profiles>

    <!-- AXIS -->
    <profile>
        <id>axis_one</id>
        <activation>
            <property>
                <name>env</name>
                <value>axis_one</value>
            </property>
        </activation>
        <properties>
            <!-- SERVER -->
            <webXml>src/main/webapp/WEB-INF/web.xml</webXml>
            <webResources.resource.directory>/src/main/resources</webResources.resource.directory>
            <webResources.resource.targetPath>WEB-INF/wsdl</webResources.resource.targetPath>
            <includePattern>*.wsdl</includePattern>

            <tomcat.server>myTomcat</tomcat.server>
            <tomcat.url>http://localhost:8080/manager/text</tomcat.url>
            <tomcat.path>/${project.build.finalName}</tomcat.path>
            <tomcat.port>8000</tomcat.port>
            <!-- DB -->
            <driverDB>com.microsoft.sqlserver.jdbc.SQLServerDriver</driverDB>
            <urlDB>jdbc:sqlserver://localhost:1434;databaseName=db_supermercados;</urlDB>
            <usernameDB>SA</usernameDB>
            <passwordDB>Das12345</passwordDB>
            <contextDB>supermercado_axis_one</contextDB>
        </properties>
    </profile>

